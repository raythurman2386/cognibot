# Example .env.local file for CogniBot
# Copy and fill in the details as required

# GPT Model Configuration
GPT_MODEL=gpt-3.5-turbo    # Default: gpt-3.5-turbo

# DALL-E Model Configuration
IMAGE_MODEL=dall-e-3      # Default: dall-e-3
IMAGE_SIZE=1024x1024      # Default: 1024x1024
IMAGE_QUALITY=standard    # Default: standard

# Cloudinary Configuration
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name  # Your Cloudinary cloud name
CLOUDINARY_API_KEY=your_cloudinary_api_key                    # Your Cloudinary API key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret              # Your Cloudinary API secret
CLOUDINARY_FOLDER=your_cloudinary_folder                      # Cloudinary folder for images

# Deployment Configuration
DEPLOY_HOOK=your_deploy_hook     # Webhook URL for triggering deployments

# Anthropic API Configuration
CLAUDE_MODEL=claude-2            # Default: claude-2
ANTHROPIC_API_KEY=your_anthropic_api_key  # Your Anthropic API key

# Discord Configuration
OWNER_ID=your_discord_owner_id   # Discord user ID of the bot owner
DISCORD_TOKEN=your_discord_token # Your Discord bot token

# Database Configuration
DB_NAME=your_database_name       # Name of your database
DB_USER=your_database_user       # Username for your database
DB_PASS=your_database_password   # Password for your database
DATABASE_URL=your_database_url   # Complete URL for your database
DB_TYPE=sqlite                   # Default database type, typically 'sqlite'
